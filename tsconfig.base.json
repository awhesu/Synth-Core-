{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "ES2021",
    "module": "commonjs",
    "lib": ["ES2021"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@syntherium/contracts": ["libs/contracts/src/index.ts"],
      "@syntherium/db": ["libs/db/src/index.ts"],
      "@syntherium/security": ["libs/security/src/index.ts"],
      "@syntherium/idempotency": ["libs/idempotency/src/index.ts"],
      "@syntherium/observability": ["libs/observability/src/index.ts"],
      "@syntherium/ledger-core": ["libs/ledger-core/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
