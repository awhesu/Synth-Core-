# Syntherium Environment Variables
# Copy this file to .env and fill in the values

# ===========================================
# DATABASE
# ===========================================
DATABASE_URL=postgresql://syntherium:syntherium_dev_123@localhost:5432/syntherium

# ===========================================
# SERVICES
# ===========================================
NODE_ENV=development

# Service Ports (defaults)
API_GATEWAY_PORT=3000
INTENT_SERVICE_PORT=3001
WEBHOOK_SERVICE_PORT=3002
SETTLEMENT_SERVICE_PORT=3003
LEDGER_SERVICE_PORT=3004
ORDERS_SERVICE_PORT=3005
OPS_SERVICE_PORT=3006

# ===========================================
# PAYMENT PROVIDERS
# ===========================================

# Flutterwave
FLUTTERWAVE_PUBLIC_KEY=
FLUTTERWAVE_SECRET_KEY=
FLUTTERWAVE_SECRET_HASH=your_webhook_secret_hash

# Paystack (future)
PAYSTACK_PUBLIC_KEY=
PAYSTACK_SECRET_KEY=

# ===========================================
# SECURITY
# ===========================================
JWT_SECRET=your-super-secret-jwt-key-change-in-production
API_KEY_HEADER=X-API-Key

# ===========================================
# CORS
# ===========================================
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# ===========================================
# LOGGING
# ===========================================
LOG_LEVEL=debug
